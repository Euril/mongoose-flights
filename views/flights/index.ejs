<%- include('../partials/html-head') %>
<link rel='stylesheet' href='/stylesheets/flights/index.css' />
<%- include('../partials/navbar') %>

<main>
  <h1>All Flights</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Num</th>
        <th>Departs</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach(flight=> { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td><a href='/flights/<%= flight._id %>'>Detail</a></td>
        </tr>
      <%}) %>
      <%# Close the forEach using EJS here %>
    </tbody>
  </table>
</main>

  <%- include('../partials/footer') %>